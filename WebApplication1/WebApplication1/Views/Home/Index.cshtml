@model IEnumerable<WebApplication1.Models.phone>

@{
    ViewBag.Title = "Home Page";
}


<div class="nav">
    <div class="nav-first">
        @*<p>Home</p>*@
        @Html.ActionLink("List of Phones", "Index", "Home")
        @Html.ActionLink("Cart", "Index", "CartAndOrder")
        @Html.ActionLink("Order List", "Orders", "CartAndOrder")
       @* <p>Orders List</p>*@
    </div>
    <div class="nav-last">
        <p>hello -  <span style="text-decoration:underline;font-weight:700;">@HttpContext.Current.Session["username"].ToString()</span></p>
        <a aria-current="page" href="/Home/Logout" style="text-decoration: none; color: #fff;">Logout</a>
    </div>
</div> <!--nav-->
<div class="container">
    <h1>List of Phones</h1>
    <form action="" method="post" class="form-order" style="height: 570px;">
        <div class="product">

            <table>
                <tr>
                    <th></th>
                    <th>phone name</th>
                    <th>quantity availble</th>
                    <th>price</th>
                    <td></td>
                </tr>

                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @*<img src='@Url.Content("~/Media/Images/Layout/"+item.image)' />*@
                                <img class="image"
                                     src=@item.image
                                     alt=" /">
                            <td>@item.name</td>
                            <td>@item.quantity</td>
                            <td>@String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c}", @item.price)</td>
                            <td>
                                @Html.ActionLink("Add to cart", "OrderNow", "CartAndOrder", new { id = item.id.ToString() }, new { @class = "btn btn-success" })
                             
                            </td>

                        </tr>
                    }
                }


            </table>
        </div> <!--product-->


    </form>
</div>
